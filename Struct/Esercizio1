
#include <stdio.h>
#include <string.h>

// Definizione della struttira per rappresentare una persona

struct Auto{
    char ModelloAuto[50]; // Un campo per il ModelloAuto (stringa)
    char Marca[50]; // Un campo per la marca (stringa)
    int cilindrata; // Un campo per la cilindrata (intero)
    int prezzo; // Un campo per il prezzo (intero)
    int annoImmatricolazione; // Un campo per l'annoImmatricolazione (intero)
    char targa[50]; // Un campo per la targa (stringa)

}

void StampaDettagliAuto(struct Auto a){
    printf("ModelloAuto: %s \n", a.modelloAuto);
    printf("Marca,: %s \n", a.marca);
    printf("Cilindrata: %d \n", a.cilindrata);
    printf("Prezzo: %d \n", a.prezzo);
}

void AggiornaCilindrata(Auto *a, int nuovaCilindrata){
    (*a).cilindrata = nuovaCilindrata;
}

int main()
{   
    Auto auto1; // Se dichiarato nel modo struct
    struct Auto auto2; // Se dichiarato nel modo typedef
    
    Auto auto3{"Cayman", "Porsche", 400, 95000};
    AggiornaCilindrata(auto3, 30);
    printf("Nuova cilindrata: %d", auto3.cilindrata);
    
    StampaDettagliAuto(auto1); // Passaggio della struttura alla funzione
    
    struct Auto concessionaria[10]; // Dichiarazione di un array di strutture
    concessionaria[0] = auto1;

    
    return 0;
}

 
